<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.ComboBox?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >
    <ComboBox fx:id="liste_cours" layoutX="10.0" layoutY="10.0" prefHeight="22.0" prefWidth="138.0" styleClass="box"  />

    <Button  fx:id="showCours" text="Show"  />
    <!--ComboBox fx:id="liste_C" layoutX="10.0" layoutY="10.0" prefHeight="22.0" prefWidth="138.0" styleClass="box"  /-->
    <children>

        <TableView fx:id="list_table"  VBox.vgrow="ALWAYS" >
            <columns>
                <TableColumn fx:id="id_col" maxWidth="200.0" minWidth="100.0" prefWidth="-1.0" text="Id" />
                <TableColumn fx:id="name_col" maxWidth="200.0" minWidth="130.0" prefWidth="-1.0" text="Names" />
                <TableColumn fx:id="present_col" maxWidth="200.0" minWidth="130.0" prefWidth="-1.0" text="Presence" />
                <TableColumn fx:id="excuse_col" maxWidth="200" minWidth="130.0"  prefWidth="-1.0" text="Excuse" />
            </columns>
        </TableView>
        <Button fx:id="makePresence" text="Save" />


    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>

